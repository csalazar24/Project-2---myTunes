<Window x:Class="myTunes.NewPlaylistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myTunes"
        mc:Ignorable="d"
        Title="New Playlist" Height="207" Width="341" ResizeMode="NoResize" >

    <Grid>
        <StackPanel>
            <DockPanel Margin="0,10,0,0" Height="100">
                <Label Margin="30,30,0,45" >Playlist Name:</Label>
                <TextBox x:Name="newPlaylist" Margin="-10,35,20,45" Width="150"/>
            </DockPanel>
            <DockPanel Height="30">
                <Button Name ="saveButton" Margin="60,0,10,0" Width="90" Click="saveButton_Click">Save</Button>
                <Button Name="cancelButton" Margin="10,0,60,0" Width="90" Click="cancelButton_Click">Cancel</Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
