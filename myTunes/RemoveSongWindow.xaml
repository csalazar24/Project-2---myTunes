<Window x:Class="myTunes.RemoveSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myTunes"
        mc:Ignorable="d"
        Title="Confirmation" Height="174" Width="319" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Label Margin="30,40,30,0">Are you sure you want to remove this song?</Label>
            <DockPanel Margin="0,20,0,0" Height="34">
                <Button Name="Yes" Width="50" Margin="70,0,10,0" Height="20" Click="Yes_Click">Yes</Button>
                <Button  Name="No" Width="50" Margin="10,0,70,0" Height="20" Click="No_Click">No</Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
